{
   "version": 2,
   "builds": [
     {
       "src": "package.json",
       "use": "@vercel/static-build",
       "config": {
         "distDir": "dist"
       }
     }
   ],
   "rewrites": [
     {
       "source": "/(.*)",
       "destination": "/"
     }
   ],
   "headers": [
     {
       "source": "/sw.js",
       "headers": [
         {
           "key": "Cache-Control",
           "value": "public, max-age=0, must-revalidate"
         },
         {
           "key": "Service-Worker-Allowed",
           "value": "/"
         }
       ]
     },
     {
       "source": "/manifest.json",
       "headers": [
         {
           "key": "Cache-Control",
           "value": "public, max-age=0, must-revalidate"
         }
       ]
     },
     {
       "source": "/(.*)\\.(?:js|css|ico|png|jpg|jpeg|gif|svg|webp)$",
       "headers": [
         {
           "key": "Cache-Control",
           "value": "public, max-age=31536000, immutable"
         }
       ]
     }
   ]
 }