{
   "version": 2,
   "builds": [
     {
       "src": "client/package.json",
       "use": "@vercel/static-build",
       "config": {
         "distDir": "dist"
       }
     },
     {
       "src": "server/src/app.js",
       "use": "@vercel/node"
     }
   ],
   "routes": [
     {
       "src": "/api/(.*)",
       "dest": "server/src/app.js"
     },
     {
       "src": "/sw.js",
       "headers": {
         "cache-control": "public, max-age=0, must-revalidate",
         "Service-Worker-Allowed": "/"
       },
       "dest": "client/sw.js"
     },
     {
       "handle": "filesystem"
     },
     {
       "src": "/(.*)\\.(?:js|css|png|jpg|jpeg|gif|ico|json|svg)$",
       "dest": "client/$1"
     },
     {
       "src": "^/$|^/artikel$|^/tentang-kami$|^/register$|^/login$|^/forgot-password$|^/pelaporan(/.*)?$|^/admin(/.*)?$",
       "dest": "client/public/index.html"
     }
   ],
   "rewrites": [
     {
       "source": "/api/(.*)",
       "destination": "server/src/app.js"
     },
     {
       "source": "/(.*)",
       "destination": "client/public/index.html"
     }
   ]
 }